{% extends "main.html" %}

{% block content %}
<form action="{{url_for('user_chat')}}" method="POST">
	<input type="hidden" name="finish">
	<button type="submit">Finish</button>
</form>
<div id="chat_screen">
	{% for i in message_log %}
	<div>
		{% if i['role'] == 'assistant' %}
		<p class="chat_bot">{{i['content']}}</p>
		{% elif i['role'] == 'user'%}
		<p class="chat_user">{{i['content']}}</p>
		{% endif %}
	</div>
	{% endfor %}
</div>
<div id="chat_box">
	<form action="{{url_for('user_chat')}}" method="POST">
		<textarea id="chat" name="chat"></textarea>
		<button type="submit">Send</button>
	</form>
</div>

<script>
	window.onload=function () {
		var objDiv = document.getElementById("chat_screen");
		objDiv.scrollTop = objDiv.scrollHeight;
	}
</script>
{% endblock %}